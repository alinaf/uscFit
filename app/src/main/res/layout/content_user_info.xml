<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UserInfoDisplay"
    tools:showIn="@layout/activity_user_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hello Tianqin!"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="57dp" />

        <TextView
            android:id="@+id/height_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Height: 6'0"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="112dp" />

        <TextView
            android:id="@+id/weight_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Weight: 150 lb"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="154dp" />

        <TextView
            android:id="@+id/age_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Age: 23"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="194dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>